{
  "name": "moneymosaic",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "clean": "rm -rf dist && rm -rf frontend/dist",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "test": "jest",
    "test:coverage": "jest --coverage --watchAll=false",
    "docs:generate": "ts-node src/generate-openapi.ts",
    "postinstall": "cd frontend && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/sqlite3": "^5.1.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "node-cron": "^4.2.0",
    "plaid": "^36.0.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
